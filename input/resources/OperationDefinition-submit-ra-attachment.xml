        <name value="encounterId"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
        <documentation value="The risk adjustable encounter id that this attachment is needed."/>
        <type value="string"/>
    </parameter>
    <parameter>
        <name value="patientId"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
