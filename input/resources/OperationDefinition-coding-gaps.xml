<?xml version="1.0" encoding="UTF-8"?>
<OperationDefinition
    xmlns="http://hl7.org/fhir">
    <id value="coding-gaps"/>
    <url value="http://hl7.org/fhir/us/davinci-ra/OperationDefinition/coding-gaps"/>
    <name value="CodingGaps"/>
    <title value="Coding Gaps Operation"/>
    <status value="draft"/>
    <kind value="operation"/>
    <date value="2021-07-20"/>
    <publisher value="Da Vinci Project"/>
    <description value="The coding-gaps operation is used to determine coding gaps for a specified clinical evaluation period for a risk adjustment model defaulted by the Server."/>
    <code value="coding-gaps"/>
    <comment value="This operation is under development"/>
    <resource value="MeasureReport"/>
    <system value="false"/>
    <type value="true"/>
    <instance value="false"/>
    <parameter>
        <name value="periodStart"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
        <documentation value="The start of a clinical evaluation period."/>
        <type value="date"/>
    </parameter>
    <parameter>
        <name value="periodEnd"/>
        <use value="in"/>
        <min value="1"/>
        <max value="1"/>
        <documentation value="The end of a clinical evaluation period."/>
        <type value="date"/>
    </parameter>
    <parameter>
        <name value="subject"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <documentation value="Subject will be a reference to a patient"/>
        <type value="string"/>
        <searchType value="reference"/>
    </parameter>
    <parameter>
        <name value="practitioner"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <documentation value="Reference to a practitioner for which the risk adjustment coding gaps report will be created."/>
        <type value="string"/>
        <searchType value="reference"/>
    </parameter>
    <parameter>
        <name value="organization"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <documentation value="Reference to an organization for which the gaps in care report will be created."/>
        <type value="string"/>
        <searchType value="reference"/>
    </parameter>
    <parameter>
        <name value="evidenceStatus"/>
        <use value="in"/>
        <min value="0"/>
        <max value="*"/>
        <documentation value="Indicate the evidence status to be either confirmed, non-confirmed, or pending. If no evidence status is provided, the default is all."/>
        <binding>
          <strength value="extensible"/>
          <valueSet value="http://hl7.org/fhir/us/davinci-ra/ValueSet/evidence-status"/>
        </binding>
        <type value="code"/>
    </parameter>
    <parameter>
        <name value="hccModel"/>
        <use value="in"/>
        <min value="0"/>
        <max value="1"/>
        <documentation value="Most recent version of the HCC Risk Adjustment Model."/>
        <type value="string"/>
    </parameter>
    <parameter>
        <name value="return"/>
        <use value="out"/>
        <min value="0"/>
        <max value="*"/>
        <documentation value="this is under development"/>
        <type value="Bundle"/>
    </parameter>
</OperationDefinition>
