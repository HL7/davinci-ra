<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="ra-coding-gap-composition"/>
    <url value="http://hl7.org/fhir/us/davinci-ra/StructureDefinition/ra-coding-gap-composition"/>
    <name value="RiskAdjustmentCodingGapCompositionProfile"/>
    <title value="Risk Adjustment Coding Gap Composition Profile"/>
    <status value="draft"/>
    <publisher value="Da Vinci Project"/>
    <description value="This is a draft Risk Adjustment Coding Gap Composition profile that is under development."/>
    <fhirVersion value="4.0.1"/>
    <kind value="resource"/>
    <abstract value="false"/>
    <type value="Composition"/>
    <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Composition"/>
    <derivation value="constraint"/>
    <differential>
        <element id="Composition">
            <path value="Composition"/>
        </element>
        <element id="Composition.type">
            <path value="Composition.type"/>
            <comment value="Risk Adjustment Coding Gap report"/>
            <fixedCodeableConcept>
                <coding>
                    <system value="http://loinc.org"/>
                    <code value="96315-7"/>
                    <display value="TODO: This is a place holder for a new LOINC code for Risk Adjustment Coding Gap Report. LOINC submission ID: 6482.)"/>
                </coding>
            </fixedCodeableConcept>
            <mustSupport value="true"/>
        </element>
        <element id="Composition.subject">
            <path value="Composition.subject"/>
            <min value="1"/>
            <short value="What individual the risk adjustment coding gap report is for."/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient"/>
            </type>
            <mustSupport value="true"/>
        </element>

        <element id="Composition.section">
            <path value="Composition.section"/>
            <slicing>
                <discriminator>
                    <type value="type"/>
                    <path value="resource"/>
                </discriminator>
                <rules value="open"/>
            </slicing>
            <min value="1"/>
            <mustSupport value="true"/>
        </element>

        <element id="Composition.section:ra_coding_gap_report_section">
            <path value="Composition.section"/>
            <sliceName value="ra_coding_gap_report_section"/>
            <short value="The focus of this section is a Risk Adjustment Coding Gap MeasureReport"/>
            <min value="1"/>
        </element>
        <element id="Composition.section:ra_coding_gap_report_section.title">
            <path value="Composition.section.title"/>
            <short value="Risk adjustment coding gap report of a version specific Risk Adjustment Model for a patient"/>
        </element>
        <element id="Composition.section:ra_coding_gap_report_section.focus">
            <path value="Composition.section.focus"/>
            <short value="This references a Risk Adjustment Coding Gap MeasureReport"/>
            <min value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/davinci-ra/StructureDefinition/ra-measurereport"/>
            </type>
            <mustSupport value="true"/>
        </element>

        <element id="Composition.section:ra_detected_issue_section">
            <path value="Composition.section"/>
            <sliceName value="ra_detected_issue_section"/>
            <short value="This section contains a Condition Category code that has detected issue along with its clinical evaluation evidence"/>
            <min value="0"/>
        </element>
        <element id="Composition.section:ra_detected_issue_section.code">
            <path value="Composition.section.code"/>
            <short value="Risk adjustment Condition Category code"/>
            <min value="1"/>
        </element>
        <element id="Composition.section:ra_detected_issue_section.focus">
            <path value="Composition.section.focus"/>
            <short value="This references a Risk Adjustment Coding Gap MeasureReport that this Condition Category was initially identified"/>
            <min value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/davinci-ra/StructureDefinition/ra-measurereport"/>
            </type>
            <mustSupport value="true"/>
        </element>
        <element id="Composition.section:ra_detected_issue_section.entry">
            <path value="Composition.section.entry"/>
            <short value="This references a Risk Adjustment Coding Gap DetectedIssue"/>
            <min value="1"/>
            <type>
                <code value="Reference"/>
                <targetProfile value="http://hl7.org/fhir/us/davinci-ra/StructureDefinition/ra-coding-gap-detectedissue"/>
            </type>
            <mustSupport value="true"/>
        </element>         

